@model rokWebsite.ViewModels.CreateRoleViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "CreateRole";
}

<span id="AntiForge"> @Html.AntiForgeryToken() </span>



@section HeadScripts
{
    <link href="~/css/dataTable.css" rel="stylesheet" />
}


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="row">



                <div class="card" style="background-color: #202940 ">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Role Actions</h4>
                    </div>
                    <div class="card-body">
                        <div class="card" style="background-color: #1A2035 ">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">Create Role</h4>
                            </div>
                            <div class="card-body">
                                <form method="post" asp-controller="Admin" asp-action="CreateRole">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="bmd-label-floating" asp-for="@Model.RoleName"></label>
                                                <input asp-for="@Model.RoleName" type="text" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary pull-right">Create Role</button>

                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                        <br />
                        <div class="card" style="background-color: #1A2035">
                            <div class="card-header card-header-primary">
                                <h4 class="card-title">Delete Role</h4>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label class="bmd-label-floating" asp-for="@Model.DeleteRoleName"></label>
                                                <input id="DeleteRoleName" asp-for="@Model.DeleteRoleName" type="text" class="form-control" autocomplete="off" />
                                                <span asp-validation-for="@Model.DeleteRoleName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <button type="button" onclick="DeleteRole()" class="btn btn-primary pull-right">Delete Role</button>

                                    <div class="clearfix"></div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
        <div class="col-md-8">
            <partial name="_PartialViews/RolesPartialView" />
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span></button>


            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section JsScripts
{
    <link href="~/css/dataTable.css" rel="stylesheet" />
    <script src="~/js/CustomDatatable.js"></script>
    <script>
        function DeleteRole() {
            var data = $('#DeleteRoleName').val()
            var url = "@(Url.Action("DeleteRolet", "Admin"))"
            var token = $('#AntiForge').val();
            alert(token);




            $.ajax({
                type: "post",
                cache: false,
                contenttype: "application/json; charset=utf-8",
                url: url,
                data: { DeleteRoleName: data, },
                datatype: "json",
                success: function (data) {
                    if (data.baz == "test")
                        alert("baz")
                },
                error: function (xhr, err) {
                    alert("readystate: " + xhr.readystate + "\nstatus: " + xhr.status);
                    alert("responsetext: " + xhr.responsetext);
                }
            })
        }






        $(document).ready(function () {
            $('#example').DataTable({
                "pageLength": 5
            });
        });

        var myModal = document.getElementById('myModal')
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

@{
    if (ViewData.ModelState != null)
    {
        foreach (var item in ViewData.ModelState)
        {
            if (item.Value.Errors.Any())
            {
                <script src="~/js/jquery.min.js"></script>
                <script>

                    $(document).ready(function () {
                        sendNotify("@item.Value.Errors[0].ErrorMessage" , "error")
                    });

                </script>
            }

        }
    }
}

