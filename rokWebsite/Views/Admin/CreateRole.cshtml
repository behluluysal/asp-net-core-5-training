@model rokWebsite.ViewModels.CreateRoleViewModel
@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "CreateRole";
}




@section HeadScripts
{
    <link href="~/css/dataTable.css" rel="stylesheet" />
}


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Create Role</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Admin" asp-action="CreateRole">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating" asp-for="Role.Name"></label>
                                        <input asp-for="Role.Name" type="text" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Role.Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Create Role</button>

                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Delete Role</h4>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Admin" asp-action="DeleteRole">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="bmd-label-floating" asp-for="Role.Name"></label>
                                        <input asp-for="Role.Name" type="text" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Role.Name" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">Create Role</button>

                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            
        </div>
        <div class="col-md-8">
            <partial name="_PartialViews/RolesPartialView" />
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span></button>


            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section JsScripts
{
    <link href="~/css/dataTable.css" rel="stylesheet" />
    <script src="~/js/CustomDatatable.js"></script>
    <script>

        $(document).ready(function () {
            $('#example').DataTable({
                "pageLength": 5
            });
        });

        var myModal = document.getElementById('myModal')


    </script>
}

@{
    if (ViewData.ModelState != null)
    {
        foreach (var item in ViewData.ModelState)
        {
            if (item.Value.Errors.Any())
            {
                <script src="~/js/jquery.min.js"></script>
                <script>

                    $(document).ready(function () {
                        sendNotify("@item.Value.Errors[0].ErrorMessage" , "error")
                    });

                </script>
            }

        }
    }
}

